<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="AppTheme.AppbarHeader">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/appbar_text_size</item>
    </style>

    <style name="AppTheme.FilterSubHeader">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.BubbleOptionText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.FilterRadioButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="buttonTint">@color/white</item>
    </style>

    <style name="AppTheme.FilterSeparator">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_height">1dp</item>
    </style>
</resources>
